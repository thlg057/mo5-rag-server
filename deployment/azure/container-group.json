{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "containerGroupName": {
      "type": "string",
      "defaultValue": "mo5-rag-server",
      "metadata": {
        "description": "Name of the container group"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources"
      }
    },
    "openAIApiKey": {
      "type": "securestring",
      "metadata": {
        "description": "OpenAI API Key"
      }
    },
    "postgresPassword": {
      "type": "securestring",
      "metadata": {
        "description": "PostgreSQL password"
      }
    },
    "dnsNameLabel": {
      "type": "string",
      "metadata": {
        "description": "DNS name label for the public IP"
      }
    }
  },
  "variables": {
    "containerGroupName": "[parameters('containerGroupName')]",
    "postgresUser": "mo5_user",
    "postgresDb": "mo5_rag"
  },
  "resources": [
    {
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2021-09-01",
      "name": "[variables('containerGroupName')]",
      "location": "[parameters('location')]",
      "properties": {
        "containers": [
          {
            "name": "postgres",
            "properties": {
              "image": "pgvector/pgvector:pg16",
              "ports": [
                {
                  "port": 5432,
                  "protocol": "TCP"
                }
              ],
              "environmentVariables": [
                {
                  "name": "POSTGRES_DB",
                  "value": "[variables('postgresDb')]"
                },
                {
                  "name": "POSTGRES_USER",
                  "value": "[variables('postgresUser')]"
                },
                {
                  "name": "POSTGRES_PASSWORD",
                  "secureValue": "[parameters('postgresPassword')]"
                },
                {
                  "name": "POSTGRES_INITDB_ARGS",
                  "value": "--encoding=UTF8 --locale=C"
                }
              ],
              "resources": {
                "requests": {
                  "cpu": 0.5,
                  "memoryInGB": 1
                }
              },
              "volumeMounts": [
                {
                  "name": "postgres-data",
                  "mountPath": "/var/lib/postgresql/data"
                }
              ]
            }
          },
          {
            "name": "api",
            "properties": {
              "image": "your-registry.azurecr.io/mo5-rag-server:latest",
              "ports": [
                {
                  "port": 8080,
                  "protocol": "TCP"
                }
              ],
              "environmentVariables": [
                {
                  "name": "ASPNETCORE_ENVIRONMENT",
                  "value": "Production"
                },
                {
                  "name": "ASPNETCORE_URLS",
                  "value": "http://+:8080"
                },
                {
                  "name": "ConnectionStrings__DefaultConnection",
                  "value": "[concat('Host=localhost;Database=', variables('postgresDb'), ';Username=', variables('postgresUser'), ';Password=', parameters('postgresPassword'), ';SSL Mode=Prefer;Trust Server Certificate=true')]"
                },
                {
                  "name": "OpenAI__ApiKey",
                  "secureValue": "[parameters('openAIApiKey')]"
                },
                {
                  "name": "RagSettings__KnowledgeBasePath",
                  "value": "/app/knowledge"
                },
                {
                  "name": "RagSettings__ChunkSize",
                  "value": "1000"
                },
                {
                  "name": "RagSettings__ChunkOverlap",
                  "value": "200"
                },
                {
                  "name": "RagSettings__MaxResults",
                  "value": "10"
                },
                {
                  "name": "RagSettings__MinSimilarityScore",
                  "value": "0.7"
                },
                {
                  "name": "Serilog__MinimumLevel__Default",
                  "value": "Information"
                }
              ],
              "resources": {
                "requests": {
                  "cpu": 1,
                  "memoryInGB": 2
                }
              }
            }
          }
        ],
        "osType": "Linux",
        "restartPolicy": "Always",
        "ipAddress": {
          "type": "Public",
          "ports": [
            {
              "port": 8080,
              "protocol": "TCP"
            }
          ],
          "dnsNameLabel": "[parameters('dnsNameLabel')]"
        },
        "volumes": [
          {
            "name": "postgres-data",
            "emptyDir": {}
          }
        ]
      }
    }
  ],
  "outputs": {
    "containerIPv4Address": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.ContainerInstance/containerGroups/', variables('containerGroupName'))).ipAddress.ip]"
    },
    "containerFQDN": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.ContainerInstance/containerGroups/', variables('containerGroupName'))).ipAddress.fqdn]"
    }
  }
}
